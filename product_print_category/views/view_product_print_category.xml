<odoo>

    <record model="ir.ui.view" id="view_product_print_category_tree">
        <field name="model">product.print.category</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree decoration-danger="product_to_print_qty != 0">
                <field name="name" />
                <field name="product_to_print_qty" />
                <field name="product_qty" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_product_print_category_form">
        <field name="model">product.print.category</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <header>
                <button
                    name="%(product_print_category.action_product_print_wizard)d"
                    type="action"
                    attrs="{'invisible': [('product_to_print_qty', '=', 0)]}"
                    string="Print Obsolete Products"
                    class="oe_highlight"
                    icon="fa-print"
                />
                <button
                    name="%(product_print_category.action_product_print_wizard)d"
                    type="action"
                    attrs="{'invisible': [('product_qty', '=', 0)]}"
                    string="Print All Products"
                    context="{'all_products': True}"
                    icon="fa-print"
                />
            </header>
            <sheet>
                <div class="oe_title">
                    <label class="oe_edit_only" for="name" string="Name" />
                    <h1><field name="name" placeholder="Print category name" /></h1>
                </div>
                <div class="oe_right oe_button_box" name="buttons">
                    <button
                        type="object"
                        class="oe_inline oe_stat_button"
                        icon="fa-print"
                        name="action_view_product_product"
                        attrs="{'invisible': [('product_to_print_qty', '=', 0)]}"
                        context="{'to_print': True}"
                    >
                        <field
                            string="To print"
                            name="product_to_print_qty"
                            widget="statinfo"
                        />
                    </button>
                    <button
                        type="object"
                        class="oe_inline oe_stat_button"
                        icon="fa-list"
                        name="action_view_product_product"
                        context="{'to_print': False}"
                    >
                        <field string="Products" name="product_qty" widget="statinfo" />
                    </button>
                </div>
                <group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" />
                        <field name="active" groups="product_print_category.manager" />
                    </group>
                    <group>
                        <field
                            name="qweb_view_id"
                            groups="product_print_category.manager"
                        />
                        <field
                            name="field_ids"
                            widget="many2many_tags"
                            groups="product_print_category.manager"
                        />
                    </group>
                </group>
            </sheet>
        </field>
    </record>

</odoo>
