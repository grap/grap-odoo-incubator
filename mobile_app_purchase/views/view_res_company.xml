<openerp><data>

    <record id="view_res_company_form" model="ir.ui.view">
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@string='General Information']" position="after">
                <page string="Scan To Purchase">
                    <group string="Settings">
                        <field name="scan_purchase_product_fields_ids" widget="many2many_tags"/>
                        <field name="scan_purchase_supplierinfo_fields_ids" widget="many2many_tags"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</data></openerp>
