<odoo>

    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='iface_precompute_cash']/../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="autosolve_product"/>
                        <div class="text-muted">
                            Product to ausolve difference
                        </div>
                        <field name="autosolve_product"/>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="autosolve_limit"/>
                        <div class="text-muted">
                            Limit to display autosolve button
                        </div>
                        <field name="autosolve_limit"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='cash_control']/../.." position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
