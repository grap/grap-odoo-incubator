<odoo>

    <record id="invoice_relais_vert" model="account.invoice">
        <field name="partner_id" ref="account_invoice_invoice2data.partner_relais_vert"/>
        <field name="type">in_invoice</field>
        <field name="date_invoice" eval="False"/>
        <field name="journal_id" search="[('type', '=', 'purchase')]"/>
    </record>

    <record id="invoice_line_relais_vert_1_arachide" model="account.invoice.line">
        <field name="invoice_id" ref="invoice_relais_vert"/>
        <field name="product_id" ref="account_invoice_invoice2data.product_relais_vert_arachide"/>
        <field name="name">Arachide</field>
        <field name="quantity">5</field>
        <field name="price_unit">6.42</field>
        <field name="account_id" model="account.account"
            search="['|', ('tag_ids', '=', ref('account.demo_ceo_wages_account')),
                    ('user_type_id', '=', ref('account.data_account_type_expenses')),
                    ('company_id', '=', obj().env['res.company']._company_default_get('account.account').id)]"/>
    </record>

