<odoo>

    <record id="view_product_pricelist_form" model="ir.ui.view">
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view" />
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <field
                    name="editable_by_product"
                    groups="product_simple_pricelist.group_simple_pricelist_editor"
                />
            </field>
            <xpath expr="//button[@name='toggle_active']" position="after">
                <button
                    name="button_edit_pricelist_by_product"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-edit"
                    attrs="{'invisible': [('editable_by_product', '=', False)]}"
                    string="Edit by Product"
                    groups="product_simple_pricelist.group_simple_pricelist_editor"
                />
            </xpath>
        </field>
    </record>

    <record id="view_product_pricelist_tree" model="ir.ui.view">
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view_tree" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="editable_by_product" invisible="1" />
                <button
                    name="button_edit_pricelist_by_product"
                    string="Edit By Product"
                    type="object"
                    icon="fa-edit"
                    attrs="{'invisible': [('editable_by_product', '=', False)]}"
                    groups="product_simple_pricelist.group_simple_pricelist_editor"
                />
            </field>
        </field>
    </record>

</odoo>
