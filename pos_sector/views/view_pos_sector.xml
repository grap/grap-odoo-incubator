<odoo>

    <record id="view_pos_sector_search" model="ir.ui.view">
        <field name="model">pos.sector</field>
        <field name="arch" type="xml">
            <search>
                <field name="company_id" groups="base.group_multi_company" />
                <filter
                    name="filter_active"
                    string="Archived"
                    domain="[('active','=',False)]"
                />
            </search>
        </field>
    </record>

    <record id="view_pos_sector_tree" model="ir.ui.view">
        <field name="model">pos.sector</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record id="view_pos_sector_form" model="ir.ui.view">
        <field name="model">pos.sector</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="name" string="Name" />
                        </div>
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="toggle_active"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-archive"
                        >
                            <field
                                name="active"
                                widget="boolean_button"
                                options='{"terminology": "archive"}'
                            />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pos_sector" model="ir.actions.act_window">
        <field name="name">Sectors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.sector</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
