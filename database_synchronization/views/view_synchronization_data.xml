<odoo>

    <record id="view_synchronization_data_search" model="ir.ui.view">
        <field name="model">synchronization.data</field>
        <field name="arch" type="xml">
            <search>
                <field name="model_id" />
            </search>
        </field>
    </record>

    <record id="view_synchronization_data_tree" model="ir.ui.view">
        <field name="model">synchronization.data</field>
        <field name="arch" type="xml">
            <tree decoration-muted="active == False">
                <field name="sequence" widget="handle" />
                <field name="model" />
                <field name="model_id" />
                <field name="mapping_type" />
                <field name="synchronization_type" />
                <field name="mapping_qty" />
                <field name="active" widget="boolean_toggle" />
                <button name="action_synchronize" string="Synchronize" type="object" />
            </tree>
        </field>
    </record>

    <record id="view_synchronization_data_form" model="ir.ui.view">
        <field name="model">synchronization.data</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_synchronize"
                        string="Synchronize"
                        type="object"
                        class="oe_highlight"
                    />
                    <button
                        name="action_full_synchronize"
                        string="Synchronize (Force)"
                        type="object"
                    />
                </header>
                <sheet>
                    <div class="oe_right oe_button_box" name="button_box">
                        <button
                            name="toggle_active"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-archive"
                        >
                            <field
                                name="active"
                                widget="boolean_button"
                                options='{"terminology": "archive"}'
                            />
                        </button>
                        <button
                            type="action"
                            class="oe_stat_button"
                            icon="fa-th-list"
                            name="%(database_synchronization.action_synchronization_mapping)d"
                            context="{'search_default_synchronization_data_id': active_id}"
                            attrs="{'invisible': [('mapping_qty', '=', 0)]}"
                        >
                            <field
                                string="Mappings"
                                name="mapping_qty"
                                widget="statinfo"
                            />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="model_id" />
                            <field name="model" />
                            <field name="mapping_type" />
                            <field name="synchronization_type" />
                            <field name="domain" />
                        </group>
                    </group>
                    <group
                        string="Synchronization"
                        attrs="{'invisible': [('mapping_type', '=', 'id')]}"
                    >
                        <field name="synchronize_readonly" />
                        <field name="field_ids">
                            <tree>
                                <field name="name" />
                                <field name="field_description" />
                                <field name="ttype" />
                                <field name="store" />
                                <field name="readonly" />
                                <field
                                    name="relation"
                                    attrs="{'invisible': [('ttype', 'not in', ['many2one', 'many2many', 'one2many'])]}"
                                />
                            </tree>
                        </field>
                    </group>
                    <group
                        string="Post Code"
                        attrs="{'invisible': [('mapping_type', '=', 'id')]}"
                    >
                        <field
                            name="post_code"
                            widget="ace"
                            options="{'mode': 'python'}"
                        />
                    </group>
                        <group string="Note">
                        <field name="description" nolabel="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_synchronization_data" model="ir.actions.act_window">
        <field name="name">Synchronization Datas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">synchronization.data</field>
        <field name="view_type">form</field>
        <field name="context">{"active_test": False}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_synchronization_data"
        name="Synchronization Datas"
        parent="menu_synchronization"
        action="action_synchronization_data"
    />

</odoo>
